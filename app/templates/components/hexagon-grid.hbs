<svg height="{{height}}" width="{{width}}" class="hexagon-grid">

    {{#each rowsArray as |row|}}

        {{#each colsArray as |col|}}

            {{hexagon-tile row=row col=col grid=this}}

        {{/each}}

    {{/each}}

    {{#each content as |entry|}}

        {{#if entry.isSingleTile}}
            {{content-tile content=entry grid=this}}
        {{else if entry.isTrippleTile}}
            {{content-tripple-tile content=entry grid=this}}
        {{/if}}

    {{/each}}

</svg>