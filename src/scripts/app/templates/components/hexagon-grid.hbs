<svg {{bind-attr height=height width=width}} class="hexagon-grid">

    {{#each row in rowsArray}}

        {{#each col in colsArray}}

            {{hexagon-tile row=row col=col grid=this}}

        {{/each}}

    {{/each}}

    {{#each entry in content}}

        {{#if entry.isSingleTile}}
            {{content-tile content=entry grid=this}}
        {{else}}
            {{content-tripple-tile content=entry grid=this}}
        {{/if}}

    {{/each}}

</svg>